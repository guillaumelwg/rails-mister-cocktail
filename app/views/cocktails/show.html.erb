<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <h5><%= dose.ingredient.name %></h5>
  <p><%= dose.description %></p>
  <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Back to cocktails menu', cocktails_path %>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
